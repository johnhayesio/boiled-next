{
  "name": "boiled-next",
  "description": "A collection of Next.js boilerplates for Native Support, Emotion, Emotion+Tailwind, Emotion+Tailwind+Twin.Macro, and Chakra UI.",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "John Hayes",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnhayesio/boiled-next.git"
  },
  "bugs": {
    "url": "https://github.com/johnhayesio/boiled-next/issues"
  },
  "homepage": "https://github.com/johnhayesio/boiled-next",
  "scripts": {
    "start": "next start",
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|ts|tsx|json)\"",
    "format": "yarn prettier",
    "check-format": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint build"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.2.0",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "babel-plugin-macros": "^3.0.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "axios": "^0.21.1",
    "next": "^10.0.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tailwindcss": "^2.0.3",
    "twin.macro": "^2.2.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    }
  }
}
